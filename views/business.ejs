<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= biz.name %> ‚Äî Manage Poster</title>
  <style>
    :root{ --ink:#0A0A0A; --muted:#6b7280; --bg:#fafafa; --paper:#fff; --brand:<%= biz.brandColor || '#FFD21E' %>; --border:#e5e7eb; }
    *{box-sizing:border-box}
    html,body{height:100%}
    body{ margin:0; font-family:system-ui,-apple-system,Segoe UI,Roboto,Inter,Arial,sans-serif; background:#f6f7f8; color:#111; }
    header{ display:flex; align-items:center; justify-content:space-between; gap:12px; padding:16px 20px; background:#fff; border-bottom:1px solid var(--border); position:sticky; top:0; z-index:20; }
    .h-left h1{margin:0; font-size:18px} .slug{color:var(--muted); font-weight:600}
    .actions{display:flex; gap:8px; flex-wrap:wrap}
    .btn{ border:2px solid #000; background:#fff; color:#000; padding:8px 12px; border-radius:10px; font-weight:700; text-decoration:none; display:inline-block; }
    .btn:hover{background:#000; color:#fff}
    .btn.secondary{border-color:#888; color:#222}
    .btn.danger{border-color:#b00; color:#b00}.btn.danger:hover{background:#b00; color:#fff}

    main{ display:grid; grid-template-columns: 520px 1fr; gap:20px; padding:18px; max-width:1400px; margin:0 auto; }
    @media (max-width:1100px){ main{ grid-template-columns: 1fr; } }

    .card{ background:#fff; border:1px solid var(--border); border-radius:14px; padding:16px 16px 6px; margin-bottom:14px; }
    .card h3{margin:0 0 10px 0; font-size:16px}
    .hint{color:var(--muted); font-size:12px; margin:6px 0 0}
    label{display:block; font-weight:700; margin:10px 0 6px}
    input[type="text"], input[type="url"], input[type="color"], input[type="number"], textarea, select{
      width:100%; padding:10px 12px; border:1px solid #cbd5e1; border-radius:10px; background:#fff; font:inherit;
    }
    textarea{resize:vertical; min-height:120px}
    .row{display:grid; grid-template-columns: 1fr 1fr; gap:12px}
    .inline{display:flex; align-items:center; gap:10px}
    .switch{display:flex; align-items:center; gap:10px; margin:6px 0}
    .logo-preview{ width:72px; height:72px; border-radius:16px; border:3px solid #000; background:#fff; display:grid; place-items:center; overflow:hidden; }
    .brand-swatch{width:100%; height:14px; border-radius:6px; background:var(--brand); border:1px solid #000}
    .savebar{ position:sticky; bottom:0; padding:10px 18px; background:#ffffffd9; backdrop-filter:saturate(1.1) blur(2px); border:1px solid var(--border); border-radius:12px; display:flex; justify-content:flex-end; gap:10px; }

    /* Preview */
    .preview{ background:#fff; border:1px solid var(--border); border-radius:14px; overflow:hidden; display:grid; grid-template-rows:auto 1fr; }
    .preview-head{display:flex; gap:8px; align-items:center; justify-content:space-between; padding:10px 12px; border-bottom:1px solid var(--border)}
    .preview-controls{display:flex; gap:8px; align-items:center}
    .chip{display:inline-block; padding:6px 10px; border:1px solid #000; border-radius:999px; font-weight:700; background:#fff; cursor:pointer}
    .chip.active{background:#000; color:#fff}
    iframe{width:100%; height:calc(100vh - 170px); border:0; background:#f1f5f9}
  </style>
</head>
<body>
  <header>
    <div class="h-left">
      <h1><strong><%= biz.name %></strong> <span class="slug">/ <%= biz.slug %></span></h1>
      <div class="hint">Edit in the same order the poster shows.</div>
    </div>
    <div class="actions">
      <a class="btn" href="/poster/<%= biz.slug %>" target="_blank">Open Poster</a>
      <a class="btn" href="/p/<%= biz.slug %>" target="_blank">Public</a>
      <a class="btn secondary" href="/">All</a>
      <form method="post" action="/business/<%= biz.slug %>/delete" onsubmit="return confirm('Delete this business?')">
        <button class="btn danger" type="submit">Delete</button>
      </form>
    </div>
  </header>

  <main>
    <section>
      <form id="themeForm" method="post" action="/business/<%= biz.slug %>/theme">
        <!-- Hidden field we repurpose to store pattern config string -->
        <input type="hidden" id="publicSubtitle" name="publicSubtitle" value="<%= biz.publicSubtitle || '' %>"/>

        <!-- 1) Brand -->
        <div class="card">
          <h3>1) Brand</h3>
          <div class="row">
            <div>
              <label>Business Name</label>
              <input name="name" type="text" value="<%= biz.name %>" />
              <div class="hint">Shown as the big heading.</div>
            </div>
          </div>
          <div class="row">
            <div>
              <label>Logo URL</label>
              <input name="logoUrl" type="url" placeholder="https://‚Ä¶" value="<%= biz.logoUrl || '' %>"/>
              <div class="switch">
                <input id="showLogo" name="showLogo" type="checkbox" <%= biz.showLogo ? 'checked' : '' %> />
                <label for="showLogo" style="margin:0; font-weight:600">Show logo</label>
              </div>
            </div>
            <div>
              <label>Brand Color (hex)</label>
              <input name="brandColor" type="text" value="<%= biz.brandColor || '#FFD21E' %>" />
              <div class="brand-swatch" style="--brand:<%= biz.brandColor || '#FFD21E' %>"></div>
              <div class="hint">Poster background uses this color.</div>
            </div>
          </div>
        </div>

        <!-- 2) Headline / Alignment -->
        <div class="card">
          <h3>2) Headline & Alignment</h3>
          <label>Headline (CTA)</label>
          <input name="ctaText" type="text" value="<%= biz.ctaText || 'Every Scan Wins ‚Äî Some Unlock a Golden Ticket üéüÔ∏è' %>" />
          <label style="margin-top:10px">Instructions alignment</label>
          <select name="ctaLabel">
            <option value="left"   <%= (biz.ctaLabel||'left')==='left'   ? 'selected' : '' %>>Left</option>
            <option value="center" <%= (biz.ctaLabel||'left')==='center' ? 'selected' : '' %>>Center</option>
            <option value="right"  <%= (biz.ctaLabel||'left')==='right'  ? 'selected' : '' %>>Right</option>
          </select>
        </div>

        <!-- 3) Steps -->
        <div class="card">
          <h3>3) Steps (1 per line)</h3>
          <textarea name="steps" rows="6"><%= (biz.steps||[]).sort((a,b)=>a.order-b.order).map(s=>s.text).join('\n') %></textarea>
          <div class="hint">Leave blank to use defaults.</div>
        </div>

        <!-- 4) Social / QR -->
        <div class="card">
          <h3>4) Social QR Boxes</h3>
          <div class="row">
            <div>
              <label class="inline"><input type="hidden" name="enableTiktok" value="0"/><input type="checkbox" name="enableTiktok" value="1" <%= biz.tiktokUrl ? 'checked' : '' %> /> TikTok</label>
              <input name="tiktokUrl" type="url" placeholder="https://www.tiktok.com/‚Ä¶" value="<%= biz.tiktokUrl || '' %>"/>
            </div>
            <div>
              <label class="inline"><input type="hidden" name="enableInstagram" value="0"/><input type="checkbox" name="enableInstagram" value="1" <%= biz.instagramUrl ? 'checked' : '' %> /> Instagram</label>
              <input name="instagramUrl" type="url" placeholder="https://www.instagram.com/‚Ä¶" value="<%= biz.instagramUrl || '' %>"/>
            </div>
          </div>
          <div class="row">
            <div>
              <label class="inline"><input type="hidden" name="enableYoutube" value="0"/><input type="checkbox" name="enableYoutube" value="1" <%= biz.youtubeUrl ? 'checked' : '' %> /> YouTube Shorts</label>
              <input name="youtubeUrl" type="url" placeholder="https://youtu.be/‚Ä¶" value="<%= biz.youtubeUrl || '' %>"/>
            </div>
            <div>
              <label>QR Layout</label>
              <select name="qrLayout">
                <option value="vertical"   <%= biz.qrLayout === 'vertical'   ? 'selected' : '' %>>3 across (default)</option>
                <option value="horizontal" <%= biz.qrLayout === 'horizontal' ? 'selected' : '' %>>Horizontal strip</option>
              </select>
            </div>
          </div>
        </div>

        <!-- 5) Background Pattern (stored in publicSubtitle) -->
        <%
          const cfgRaw = (biz.publicSubtitle || '').trim();
          const cfg = {};
          if (cfgRaw) {
            cfgRaw.split(';').forEach(pair => {
              const [k,v] = pair.split('=').map(s => (s||'').trim());
              if (k && v !== undefined) cfg[k] = v;
            });
          }
          const pat = (cfg.pattern || 'fries').toLowerCase();
          const size = cfg.size || '120px';
          const alpha = cfg.alpha || '0.12';
          const rotate = cfg.rotate || '0deg';
          const colorPref = (cfg.color || 'brand').toLowerCase();
          const colorHex = (/^#?[0-9a-f]{6}$/i.test(colorPref) ? (colorPref.startsWith('#') ? colorPref : ('#'+colorPref)) : '');
        %>
        <div class="card">
          <h3>5) Background Pattern</h3>
          <div class="row">
            <div>
              <label>Pattern</label>
              <select id="patPattern">
                <option value="fries" <%= pat==='fries' ? 'selected' : '' %>>Fries üçü</option>
                <option value="soda"  <%= pat==='soda'  ? 'selected' : '' %>>Soda ü•§</option>
                <option value="books" <%= pat==='books' ? 'selected' : '' %>>Books + Coffee üìö‚òï</option>
              </select>
              <div class="hint">Outline icons tiled across background.</div>
            </div>
            <div>
              <label>Tile Size</label>
              <input id="patSize" type="text" value="<%= size %>" />
              <div class="hint">e.g. 120px</div>
            </div>
          </div>
          <div class="row">
            <div>
              <label>Opacity</label>
              <input id="patAlpha" type="number" step="0.01" min="0" max="1" value="<%= parseFloat(alpha) %>"/>
              <div class="hint">0.10‚Äì0.20 looks nice; print auto-reduces slightly.</div>
            </div>
            <div>
              <label>Rotate</label>
              <input id="patRotate" type="text" value="<%= rotate %>" />
              <div class="hint">e.g. 0deg, 8deg, -5deg</div>
            </div>
          </div>

          <div class="row">
            <div>
              <label>Icon Color</label>
              <select id="patColorMode">
                <option value="brand" <%= colorPref==='brand' ? 'selected' : '' %>>Use Brand (auto-darkened)</option>
                <option value="ink"   <%= colorPref==='ink'   ? 'selected' : '' %>>Use Ink (#0A0A0A)</option>
                <option value="custom" <%= colorHex ? 'selected' : '' %>>Custom Hex‚Ä¶</option>
              </select>
              <div class="hint">Choose how icon outlines are colored.</div>
            </div>
            <div>
              <label>Custom Hex (if chosen)</label>
              <input id="patColorHex" type="text" placeholder="#1e293b" value="<%= colorHex %>"/>
              <div class="hint">Format: #RRGGBB</div>
            </div>
          </div>

          <div class="hint">Saved into <code>publicSubtitle</code> as: <code>pattern=‚Ä¶; size=‚Ä¶; alpha=‚Ä¶; rotate=‚Ä¶; color=‚Ä¶</code></div>
        </div>

        <!-- 6) Footer -->
        <div class="card">
          <h3>6) Footer (small print)</h3>
          <input name="publicFooter" type="text" value="<%= biz.publicFooter || 'Perks tied to follows/check-ins. Feedback appreciated, never required.' %>" />
        </div>

        <div class="savebar">
          <button class="btn" type="submit">Save changes</button>
          <a class="btn secondary" href="/poster/<%= biz.slug %>" target="_blank">Open Poster</a>
          <a class="btn secondary" href="/p/<%= biz.slug %>" target="_blank">Public Poster</a>
        </div>
      </form>
    </section>

    <!-- Right: Live Preview -->
    <aside class="preview">
      <div class="preview-head">
        <div><strong>Live Preview</strong></div>
        <div class="preview-controls">
          <button class="chip" id="a4Btn">A4</button>
          <button class="chip" id="letterBtn">Letter</button>
          <button class="chip" id="refreshBtn">Refresh</button>
          <button class="chip" id="printBtn">Print</button>
        </div>
      </div>
      <iframe id="posterFrame" src="/poster/<%= biz.slug %>?ts=<%= Date.now() %>" title="Poster Preview"></iframe>
    </aside>
  </main>

  <script>
    // Build publicSubtitle config string before submit
    const form = document.getElementById('themeForm');
    form.addEventListener('submit', () => {
      let colorVal = document.getElementById('patColorMode').value;
      if (colorVal === 'custom') {
        const hx = (document.getElementById('patColorHex').value || '').trim();
        if (/^#?[0-9a-f]{6}$/i.test(hx)) colorVal = hx.startsWith('#') ? hx : ('#'+hx);
        else colorVal = 'brand'; // fallback
      }
      const cfg = [
        'pattern=' + document.getElementById('patPattern').value,
        'size='    + (document.getElementById('patSize').value || '120px'),
        'alpha='   + (document.getElementById('patAlpha').value || '0.12'),
        'rotate='  + (document.getElementById('patRotate').value || '0deg'),
        'color='   + colorVal
      ].join('; ');
      document.getElementById('publicSubtitle').value = cfg;
    });

    // Preview controls
    const frame = document.getElementById('posterFrame');
    const a4Btn = document.getElementById('a4Btn');
    const ltrBtn = document.getElementById('letterBtn');
    const refreshBtn = document.getElementById('refreshBtn');
    const printBtn = document.getElementById('printBtn');
    const setActive = btn => [a4Btn,ltrBtn].forEach(b=>b.classList.toggle('active', b===btn));

    a4Btn.addEventListener('click', e=>{e.preventDefault(); setActive(a4Btn); sendToPoster({type:'setFormat', payload:'a4'})});
    ltrBtn.addEventListener('click', e=>{e.preventDefault(); setActive(ltrBtn); sendToPoster({type:'setFormat', payload:'letter'})});
    refreshBtn.addEventListener('click', e=>{e.preventDefault(); frame.src = '/poster/<%= biz.slug %>?ts=' + Date.now(); });
    printBtn.addEventListener('click', e=>{e.preventDefault(); sendToPoster({type:'print'})});
    function sendToPoster(msg){ frame.contentWindow?.postMessage(msg, window.location.origin); }

    // Optional: disable/enable custom hex input visibility
    const modeSel = document.getElementById('patColorMode');
    const hexInput = document.getElementById('patColorHex');
    function toggleHex(){
      hexInput.disabled = modeSel.value !== 'custom';
      hexInput.style.opacity = modeSel.value === 'custom' ? '1' : '0.5';
    }
    modeSel.addEventListener('change', toggleHex);
    toggleHex();

    // Auto-refresh preview shortly after save
    form.addEventListener('submit', ()=> setTimeout(()=>{ frame.src = '/poster/<%= biz.slug %>?ts=' + Date.now(); }, 400));
  </script>
</body>
</html>
